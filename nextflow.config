/*
 * DAG (workflow graph) visualization settings
 * These options control how `-with-dag` renders the workflow graph.
 * Recommended for generating publication-quality workflow figures.
 */

dag {

    // Enable DAG generation
    enabled = true

    // Output file for the DAG
    // Recommended formats:
    //  - .svg : vector graphic, best for papers
    //  - .html / .mmd : Mermaid-based, easy to further beautify
    file = "workflow.png"

    // Overwrite existing DAG file if it exists
    overwrite = true

    // Layout direction of the workflow graph
    // TB = Top to Bottom (default)
    // LR = Left to Right (recommended for publications)
    direction = 'LR'

    // Control the level of detail shown in the DAG
    // false = hide channels and operators (clean, high-level view)
    // true  = show all channels and operators (debug-level detail)
    verbose = false

    // Depth of workflow expansion
    // 0 = do not expand sub-workflows
    // 1 = expand one level (recommended)
    // >1 = expand deeply (may look cluttered)
    depth = 1
}